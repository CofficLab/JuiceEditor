{
  "name": "@coffic/juice-editor",
  "version": "0.9.111",
  "homepage": "https://cofficlab.github.io/en/juiceEditor",
  "repository": "https://github.com/cofficlab/juiceEditor",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "tiptap",
    "headless",
    "wysiwyg",
    "text editor",
    "prosemirror"
  ],
  "scripts": {
    "dev": "npm run draw:build && vite",
    "install:monaco": "cd monaco && pnpm install",
    "build": "npm run build:clean && vue-tsc --emitDeclarationOnly && vite build && npm run build:types",
    "build:clean": "rm -rf dist && npm run draw:clean",
    "build:types": "tsc --emitDeclarationOnly && tsc-alias",
    "draw:build": "npm run draw:clean && npm run draw:copy",
    "draw:copy": "npm run draw:clean && cp -rf node_modules/@coffic/juice-editor-draw/dist public/draw",
    "draw:clean": "rm -rf public/draw",
    "test": "jest --coverage --no-warnings"
  },
